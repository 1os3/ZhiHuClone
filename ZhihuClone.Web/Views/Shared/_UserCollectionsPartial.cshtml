@model IEnumerable<ZhihuClone.Core.Models.Collection>

@if (!Model.Any())
{
    <div class="text-center text-muted my-5">
        <i class="fas fa-star fa-3x mb-3"></i>
        <p>还没有收藏任何内容</p>
    </div>
}
else
{
    <div class="list-group list-group-flush">
        @foreach (var collection in Model)
        {
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">
                        <a href="/collection/@collection.Id" class="text-decoration-none text-dark">@collection.Title</a>
                    </h5>
                    <small class="text-muted">@collection.CreatedAt.ToString("yyyy-MM-dd")</small>
                </div>
                <p class="mb-1 text-muted">@(collection.Description?.Length > 100 ? collection.Description[..100] + "..." : collection.Description)</p>
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="fas fa-file-alt"></i> @collection.PostCount 篇文章
                        <i class="fas fa-eye ms-2"></i> @collection.ViewCount
                    </small>
                    @if (collection.IsPrivate)
                    {
                        <span class="badge bg-secondary">
                            <i class="fas fa-lock"></i> 私密
                        </span>
                    }
                </div>
            </div>
        }
    </div>
} 