@model IEnumerable<ZhihuClone.Core.Models.Content.Topic>
@{
    ViewData["Title"] = "全部话题";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h4 class="mb-0">全部话题</h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center text-muted my-5">
                            <i class="bi bi-hash display-4"></i>
                            <p class="mt-3">暂无话题</p>
                        </div>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var topic in Model)
                            {
                                <div class="col">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center mb-3">
                                                @if (!string.IsNullOrEmpty(topic.IconUrl))
                                                {
                                                    <img src="@topic.IconUrl" alt="@topic.Name" class="rounded me-3" style="width: 48px; height: 48px;">
                                                }
                                                else
                                                {
                                                    <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                                        <i class="bi bi-hash fs-3"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <h5 class="card-title mb-1">
                                                        <a href="/topic/@topic.Id" class="text-decoration-none text-dark">@topic.Name</a>
                                                    </h5>
                                                    <div class="text-muted small">
                                                        <span class="me-2">@topic.Posts.Count 篇文章</span>
                                                        <span>@topic.Followers.Count 位关注者</span>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(topic.Description))
                                            {
                                                <p class="card-text text-muted small">@(topic.Description?.Length > 100 ? topic.Description[..100] + "..." : topic.Description)</p>
                                            }
                                        </div>
                                        <div class="card-footer bg-white">
                                            <a href="/topic/@topic.Id" class="btn btn-outline-primary btn-sm w-100">查看详情</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 